{
	"main": {
		"prefix": "main",
		"body": [
			"int main(int argc, char **argv) {",
				"\t$0",
				"\treturn EXIT_SUCCESS;",
			"}"
		]
	},
	"include \"\"": {
		"prefix": ["include\"\"", "#include\"\""],
		"body": ["#include \"${1:${TM_FILENAME_BASE:file}.h}\""]
	},
	"include <>": {
		"prefix": ["include<>", "#include<>"],
		"body": ["#include <${1:${TM_FILENAME_BASE:file}.h}>"]
	},
	"header include guards": {
		"prefix": ["headerguards", "#ifndef_guard"],
		"body": [
			"#ifndef ${1:${TM_FILENAME_BASE/(.*)/${1:/upcase}/}_H}",
			"#define $1\n",
			"$0\n",
			"#endif"
		]
	},
	"if": {
		"prefix": "if",
		"body": [
			"if (${1:true}) {",
				"\t$0",
			"}"
		]
	},
	"else": {
		"prefix": "else",
		"body": [
			"else {",
				"\t$0",
			"}"
		]
	},
	"else if": {
		"prefix": "elseif",
		"body": [
			"else if (${1:true}) {",
				"\t$0",
			"}"
		]
	},
	"switch": {
		"prefix": "switch",
		"body": [
			"switch (${1:input}) {",
			"$0",
			"}"
		]
	},
	"case": {
		"prefix": "case",
		"body": [
			"case ${1:0}:",
			"\t$0",
			"\tbreak;"
		]
	},
	"while": {
		"prefix": "while",
		"body": [
			"while (${1:true}) {",
				"\t$0",
			"}"
		]
	},
	"do while": {
		"prefix": "dowhile",
		"body": [
			"do {",
				"\t$0",
			"} while(${1:true});"
		]
	},
	"for": {
		"prefix": "for",
		"body": [
			"for (${1:int i = 0}; ${2:i < length}; ${3:i++}) {",
				"\t$0",
			"}"
		]
	},
	"for index": {
		"prefix": "fori",
		"body": [
			"for (int ${1:i} = 0; $1 < ${2:length}; $1++) {",
				"\t$0",
			"}"
		]
	},
	"for reverse": {
		"prefix": "forr",
		"body": [
			"for (int ${1:i} = ${2:length-1}; $1 >= 0; $1--) {",
				"\t$0",
			"}"
		]
	}
}
