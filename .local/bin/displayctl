#!/bin/sh

# TODO: fix nvidia hdmi
# TODO: detect what outputs are available
mon0="eDP-1"
mon1="HDMI-A-1"

choice="$1"
[ -z "$choice" ] && {
	choices="mono duel mirror"
	choice="$(CH_LINES=5 CH_WIDTH=100 CH_PROMPT="Display Control" choose $choices)"
}

case "$choice" in
	"mono")
		swaymsg output "$mon0" enable pos 0 0
		swaymsg output "$mon1" disable
		;;
	"duel")
		swaymsg output "$mon0" enable pos 0 1080
		swaymsg output "$mon1" enable pos 0 0
		;;
	"mirror")
		# TODO: display mirroring
		;;
	"*")
		return 1
		;;
esac
