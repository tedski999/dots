#!/usr/bin/env fish

# Prompt user with system power control settings
# Dependencies: bspc

test $argv[1]
and set choice $argv[1]
or set choice (choose "lock" "suspend" "hibernate" "logout" "reboot" "shutdown")

switch $choice
	case "lock"; lock
	case "suspend"; systemctl suspend; lock
	case "logout"; bspc quit
	case "reboot"; systemctl reboot
	case "shutdown"; systemctl poweroff
	case "*"; return 1
end
