#!/bin/sh

# TODO: idle toggle

[ "$(hostname)" = "msung" ] || exit 1

choice="$1"
[ -z "$choice" ] && {
	choices="lock suspend reload logout reboot shutdown"
	choice="$(CH_LINES=8 CH_WIDTH=100 CH_PROMPT="‚èº Power Control" choose $choices)"
}

case "$choice" in
	"lock") loginctl lock-session;;
	"suspend") systemctl suspend;;
	"reload") swaymsg reload;;
	"logout") swaymsg exit;;
	"reboot") systemctl reboot;;
	"shutdown") systemctl poweroff;;
	"*") return 1;;
esac
