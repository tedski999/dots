#!/bin/sh

for bin in $(realpath $(which -a fd fdfind)); do
	[ "$(realpath $0)" != "$bin" ] && [ -x "$bin" ] && exec "$bin" "$@"
done

case "$(uname --machine)" in
	"x86_64"*) opt="$HOME/.local/opt/fd/x86_64"; bin="$opt/fd-v8.7.0-x86_64-unknown-linux-musl/fd"; src="https://github.com/sharkdp/fd/releases/download/v8.7.0/fd-v8.7.0-x86_64-unknown-linux-musl.tar.gz";;
	"arm"*)    opt="$HOME/.local/opt/fd/arm64";  bin="$opt/fd-v8.7.0-arm-unknown-linux-musleabihf/fd"; src="https://github.com/sharkdp/fd/releases/download/v8.7.0/fd-v8.7.0-arm-unknown-linux-musleabihf.tar.gz";;
esac

[ -d "$opt" ] || { mkdir -p "$opt" && curl -fL "$src" | tar -xzC "$opt"; } || { rm -r "$opt"; exit 1; }

exec "$bin" "$@"
