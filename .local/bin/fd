#!/bin/sh

export PATH=$(echo "$PATH" | tr ":" "\n" | grep -v "$(dirname -- "$0")" | tr "\n" ":")

hash fd 2>/dev/null && exec fd $@

case "$(uname --machine)" in
	"x86_64"*) opt="$HOME/.local/opt/fd/x86_64"; src="https://github.com/sharkdp/fd/releases/download/v8.7.0/fd-v8.7.0-x86_64-unknown-linux-musl.tar.gz";;
	"arm"*)    opt="$HOME/.local/opt/fd/arm64";  src="https://github.com/sharkdp/fd/releases/download/v8.7.0/fd-v8.7.0-aarch64-unknown-linux-gnu.tar.gz";;
esac

[ -d "$opt" ] || { mkdir -p "$opt" && curl -fsSL "$src" | tar -xzC "$opt"; } || { rm -r "$opt"; exit 1; }

exec "$opt/fd" $@
