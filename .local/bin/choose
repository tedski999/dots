#!/bin/sh

lines="$CH_LINES"
width="$CH_WIDTH"
prompt="$CH_PROMPT"
custom="$CH_CUSTOM"
password="$CH_PASSWORD"

[ -z "$lines" ] && lines="16"
[ -z "$width" ] && width="50%"
[ -n "$password" ] && password="--password"

IFS="
"

while true; do
	choice="$(printf "%s\n" $@ | flock -n /tmp/wofi.lock wofi --cache-file /dev/null --dmenu --lines "$lines" --width "$width" $password --prompt "$prompt")"
	[ -n "$custom" ] || [ -z "$choice" ] || { for option in $@; do [ "$choice" = "$option" ] && break; done; } && break
done

echo "$choice"
