#!/bin/sh

for bin in $(realpath $(which -a cliphist)); do
	[ "$(realpath $0)" != "$bin" ] && [ -x "$bin" ] && exec "$bin" "$@"
done

case "$(uname --machine)" in
	"x86_64"*) opt="$HOME/.local/opt/cliphist/x86_64"; bin="$opt/cliphist"; src="https://github.com/sentriz/cliphist/releases/download/v0.4.0/v0.4.0-linux-amd64";;
	"arm"*)    opt="$HOME/.local/opt/cliphist/arm64";  bin="$opt/cliphist"; src="https://github.com/sentriz/cliphist/releases/download/v0.4.0/v0.4.0-linux-arm";;
esac

[ -d "$opt" ] || { mkdir -p "$opt" && curl -fL "$src" > "$bin" && chmod +x "$bin"; } || { rm -r "$opt"; exit 1; }

exec "$bin" "$@"
